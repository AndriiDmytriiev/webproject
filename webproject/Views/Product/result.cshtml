<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>


    <h3>Product List</h3>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Creation Date</th>
            <th>Expired Date</th>


        </tr>
        @if (@ViewBag.products != null)
        { 
            @foreach (var item in ViewBag.products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>@item.CreationDate</td>
                    <td>@item.ExpiredDate</td>
                </tr>
            }
        }
    </table>
    <br>

    <a href="~/Product/add">Add Items</a> |
    <a href="~/Product/delete">Delete Items</a> |
    <a href="~/Product/edit">Update Items</a> |
    <a href="~/Product/search">Search Items</a> |


</body>
</html>